

<UserControl
    x:Class="PhotoManager.Views.Page1View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:PhotoManager.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:InverseBooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Margin="0,0,0,20"
            FontSize="18"
            FontWeight="Bold"
            Text="根据缩略图名称筛选JPG和NEF文件" />

        <!--  缩略图文件夹  -->
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,10,10"
            VerticalAlignment="Center"
            Text="缩略图文件夹:" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,10,10"
            Text="{Binding ThumbnailsFolder}" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Margin="0,0,0,10"
            Command="{Binding BrowseThumbnailsCommand}"
            Content="浏览" />

        <!--  源文件夹  -->
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,0,10,10"
            VerticalAlignment="Center"
            Text="源文件夹:" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,0,10,10"
            Text="{Binding SourceFolder}" />
        <Button
            Grid.Row="2"
            Grid.Column="2"
            Margin="0,0,0,10"
            Command="{Binding BrowseSourceCommand}"
            Content="浏览" />

        <!--  输出文件夹  -->
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,0,10,10"
            VerticalAlignment="Center"
            Text="输出文件夹:" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,0,10,10"
            Text="{Binding OutputFolder}" />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            Margin="0,0,0,10"
            Command="{Binding BrowseOutputCommand}"
            Content="浏览" />

        <!--  结果显示  -->
        <Border
            Grid.Row="4"
            Grid.ColumnSpan="3"
            Margin="0,0,0,20"
            Padding="10"
            Background="#f8f9fa"
            BorderBrush="#dee2e6"
            BorderThickness="1">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="{Binding OperationResult.StatusMessage}" />
                <TextBlock Text="{Binding OperationResult.JpgCount, StringFormat='已复制JPG文件数量: {0}'}" />
                <TextBlock Text="{Binding OperationResult.NefCount, StringFormat='已复制NEF文件数量: {0}'}" />
            </StackPanel>
        </Border>

        <!--  按钮  -->
        <StackPanel
            Grid.Row="6"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Margin="0,0,20,0"
                Padding="20,10"
                Background="#28a745"
                Command="{Binding StartCommand}"
                Content="启动"
                Foreground="White"
                IsEnabled="{Binding IsProcessing, Converter={x:Static BooleanToVisibilityConverter.InverseBooleanConverter}}" />
            <Button
                Padding="20,10"
                Background="#6c757d"
                Command="{Binding ExitCommand}"
                Content="退出"
                Foreground="White" />
        </StackPanel>

        <ProgressBar
            Grid.Row="5"
            Grid.ColumnSpan="3"
            Height="10"
            IsIndeterminate="True"
            Visibility="{Binding IsProcessing, Converter={x:Static BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>

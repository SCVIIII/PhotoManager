<UserControl
    x:Class="PhotoManager.Views.Page1View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PhotoManager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <!--  使用Grid实现响应式布局  -->
    <Grid Margin="20">
        <!--  主布局行定义  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  标题  -->
            <RowDefinition Height="20" />
            <!--  间距  -->
            <RowDefinition Height="Auto" />
            <!--  缩略图文件夹行  -->
            <RowDefinition Height="10" />
            <!--  间距  -->
            <RowDefinition Height="Auto" />
            <!--  源文件文件夹行  -->
            <RowDefinition Height="10" />
            <!--  间距  -->
            <RowDefinition Height="Auto" />
            <!--  输出文件夹行  -->
            <RowDefinition Height="20" />
            <!--  间距  -->
            <RowDefinition Height="Auto" />
            <!--  按钮行  -->
            <RowDefinition Height="20" />
            <!--  间距  -->
            <RowDefinition Height="Auto" />
            <!--  结果显示行  -->
        </Grid.RowDefinitions>

        <!--  标题  -->
        <TextBlock
            Grid.Row="0"
            FontSize="24"
            FontWeight="Bold"
            Text="文件筛选工具" />

        <!--  缩略图文件夹  -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="120" />
                <!--  标签列，自动宽度  -->
                <ColumnDefinition Width="10" />
                <!--  间距  -->
                <ColumnDefinition Width="*" MinWidth="200" />
                <!--  文本框列，自适应宽度  -->
                <ColumnDefinition Width="10" />
                <!--  间距  -->
                <ColumnDefinition Width="Auto" MinWidth="80" />
                <!--  按钮列，自动宽度  -->
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="缩略图文件夹：" />

            <TextBox
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                Text="{Binding ThumbnailFolder}" />

            <Button
                Grid.Column="4"
                Command="{Binding BrowseThumbnailFolderCommand}"
                Content="浏览" />
        </Grid>

        <!--  源文件文件夹  -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="120" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" MinWidth="200" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="Auto" MinWidth="80" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="源文件文件夹：" />

            <TextBox
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                Text="{Binding SourceFolder}" />

            <Button
                Grid.Column="4"
                Command="{Binding BrowseSourceFolderCommand}"
                Content="浏览" />
        </Grid>

        <!--  输出文件夹  -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="120" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" MinWidth="200" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="Auto" MinWidth="80" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="输出文件夹：" />

            <TextBox
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                Text="{Binding OutputFolder}" />

            <Button
                Grid.Column="4"
                Command="{Binding BrowseOutputFolderCommand}"
                Content="浏览" />
        </Grid>

        <!--  操作按钮  -->
        <StackPanel
            Grid.Row="8"
            Margin="10,10,100,10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <!--  居中显示  -->
            <!--  按钮间距  -->

            <Button
                Width="80"
                Margin="0,0,20,0"
                Command="{Binding StartCommand}"
                Content="启动" />

            <Button
                Width="80"
                Command="{Binding ExitCommand}"
                Content="退出" />
        </StackPanel>

        <!--  结果显示  -->
        <TextBlock
            Grid.Row="10"
            HorizontalAlignment="Center"
            FontSize="14"
            Foreground="Green"
            Text="{Binding ResultMessage}" />
        <!--  居中显示结果  -->
    </Grid>
</UserControl>
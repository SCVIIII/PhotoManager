
<Window
    x:Class="PhotoManager.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PhotoManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:PhotoManager.ViewModels"
    xmlns:views="clr-namespace:PhotoManager.Views"
    Title="照片筛选V1.0"
    Width="1200"
    Height="600"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>

    <Grid>
        <!--  侧边栏  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2c3e50">
            <StackPanel>
                <TextBlock
                    Margin="20,20,0,20"
                    FontSize="16"
                    Foreground="White"
                    Text="功能菜单" />

                <Button
                    Margin="10"
                    HorizontalContentAlignment="Left"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{x:Type views:Page1View}"
                    Content="JPG    → 源JPG+NEF" />

                <Button
                    Margin="10"
                    HorizontalContentAlignment="Left"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{x:Type views:Page2View}"
                    Content="源JPG → 源JPG+NEF" />

                

                <Button
                    Margin="10"
                    VerticalAlignment="Bottom"
                    Command="{Binding ExitCommand}"
                    Content="退出程序" />
            </StackPanel>
        </Border>

        <!--  内容区域  -->
        <ContentControl
            Grid.Column="1"
            Margin="20"
            Content="{Binding CurrentView}" />
    </Grid>

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495e" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
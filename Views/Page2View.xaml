<UserControl
    x:Class="PhotoManager.Views.Page2View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PhotoManager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock
                Margin="0,0,0,20"
                FontSize="20"
                Text="NEF/RAW文件去重工具" />

            <!--  源文件文件夹  -->
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBlock
                    Width="120"
                    VerticalAlignment="Center"
                    Text="源文件文件夹：" />
                <TextBox
                    Width="400"
                    Margin="0,0,10,0"
                    Text="{Binding SourceFolder}" />
                <Button
                    Width="80"
                    Command="{Binding BrowseSourceFolderCommand}"
                    Content="浏览" />
            </StackPanel>

            <!--  输出文件夹  -->
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBlock
                    Width="120"
                    VerticalAlignment="Center"
                    Text="输出文件夹：" />
                <TextBox
                    Width="400"
                    Margin="0,0,10,0"
                    Text="{Binding OutputFolder}" />
                <Button
                    Width="80"
                    Command="{Binding BrowseOutputFolderCommand}"
                    Content="浏览" />
            </StackPanel>

            <!--  操作按钮  -->
            <StackPanel Margin="120,20,0,0" Orientation="Horizontal">
                <Button
                    Width="80"
                    Margin="0,0,10,0"
                    Command="{Binding StartCommand}"
                    Content="启动" />
                <Button
                    Width="80"
                    Command="{Binding ExitCommand}"
                    Content="退出" />
            </StackPanel>

            <!--  结果显示  -->
            <TextBlock
                Margin="120,20,0,0"
                FontSize="14"
                Foreground="Green"
                Text="{Binding ResultMessage}" />
        </StackPanel>
    </Grid>
</UserControl>

